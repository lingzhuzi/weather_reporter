{
  "name": "天气预报",
  "description": "天气预报",
  "version": "1.0",
  "icons": {
    "128": "img/logo128.png",
    "48":  "img/logo48.png",
    "16":  "img/logo16.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "notifications"
  ],
  "browser_action": {
    "default_title": "天气预报",
    "default_icon": "img/logo128.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "css": [],
    "js": ["js/jquery-2.1.0.min.js", "js/helper.js"],
    "run_at": "document_end"
  }]
}